<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/place_image_height">

    <ImageView
        android:id="@+id/place_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/place_image_height"
        android:scaleType="centerCrop"
        tools:src="@drawable/don_papa"/>

    <TextView
        android:id="@+id/place_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/fa_solid"
        android:textColor="@android:color/white"
        android:padding="@dimen/padding_stars"
        android:textSize="@dimen/stars_icon_size"
        tools:text="&#xf005; &#xf005; &#xf005; &#xf005;"/>

    <TextView
        android:id="@+id/place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/place_name_text_size"
        android:padding="@dimen/padding_place_name"
        android:layout_marginBottom="@dimen/bottom_margin_place_name"
        android:background="@color/blackWithAlpha"
        tools:text="Don Papa"/>
</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/content_margin_bottom">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/row_margin"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/place_address_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/fa_solid"
        android:textSize="@dimen/icon_text_size"
        android:text="&#xf3c5;" />
    <TextView
        android:id="@+id/place_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/colorAccent"
        tools:text="Nad PÅ™ehradou 9"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/place_row_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/row_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/fa_solid"
            android:textSize="@dimen/icon_text_size"
            android:text="&#xf095;" />
        <TextView
            android:id="@+id/place_phone_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:autoLink="phone"
            android:textSize="@dimen/text_size_normal"
            tools:text="+420 736 638 380"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/place_row_web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/row_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/fa_solid"
            android:textSize="@dimen/icon_text_size"
            android:text="&#xf0ac;" />
        <TextView
            android:id="@+id/place_web"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:autoLink="web"
            android:textSize="@dimen/text_size_normal"
            tools:text="www.restaurantdonpapa.cz" />
    </LinearLayout>
    <TextView
        android:id="@+id/place_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/row_margin"
        android:textSize="@dimen/text_size_normal"
        tools:text="Cat ipsum dolor sit amet, sleeps on my head cat not kitten around asdflkjaertvlkjasntvkjn (sits on keyboard), or attack the dog then pretend like nothing happened. Hopped up on catnip stretch leave fur on owners clothes yowling nonstop the whole night."/>
    </LinearLayout>
</LinearLayout>